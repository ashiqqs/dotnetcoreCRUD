@page
@model BookListRazor.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}
<br />
<h3>Edit Book</h3>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div asp-validation-summery="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Book.Id" />
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Name" placeholder="Book Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Author" placeholder="Author Name" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.ISBN" placeholder="ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 offset-md-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-md-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

